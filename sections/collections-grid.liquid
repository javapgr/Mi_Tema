<!-- Grid de Colecciones con Imágenes -->
<section class="collections-grid section" style="background-color: {{ section.settings.background_color }};">
  <div class="container">
    {% if section.settings.title != blank %}
      <div class="section-header">
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <p class="section-header__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="collections-grid__wrapper grid grid--{{ section.settings.columns }}">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="collection-card" {{ block.shopify_attributes }}>
          <div class="collection-card__image-wrapper">
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | image_url: width: 400 }}"
                srcset="{{ block.settings.image | image_url: width: 200 }} 200w,
                        {{ block.settings.image | image_url: width: 300 }} 300w,
                        {{ block.settings.image | image_url: width: 400 }} 400w"
                sizes="(max-width: 480px) 200px, (max-width: 768px) 300px, 400px"
                alt="{{ block.settings.title }}"
                class="collection-card__image"
                loading="lazy"
              >
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'collection-card__image placeholder' }}
            {% endif %}
          </div>
          <h3 class="collection-card__title">{{ block.settings.title }}</h3>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .collections-grid {
    padding: 6rem 0;
  }

  .collections-grid__wrapper {
    gap: 2.5rem;
  }

  .collection-card {
    display: block;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .collection-card:hover {
    transform: translateY(-5px);
  }

  .collection-card__image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    border-radius: var(--border-radius);
    overflow: hidden;
    margin-bottom: 1.5rem;
    background-color: #f5f5f5;
  }

  .collection-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .collection-card:hover .collection-card__image {
    transform: scale(1.08);
  }

  .collection-card__title {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-text);
    transition: color 0.3s ease;
  }

  .collection-card:hover .collection-card__title {
    color: var(--color-primary);
  }

  /* Placeholder styles */
  .collection-card__image.placeholder {
    padding: 20%;
    background-color: #f0f0f0;
  }

  @media (max-width: 768px) {
    .collections-grid {
      padding: 4rem 0;
    }

    .collections-grid__wrapper {
      gap: 2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Grid de Colecciones",
  "tag": "section",
  "class": "collections-grid-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título de la sección"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 3,
      "max": 6,
      "step": 1,
      "label": "Columnas",
      "default": 6
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Colección",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Nombre de colección"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid de Colecciones",
      "blocks": [
        { "type": "collection", "settings": { "title": "Limp Bizkit" } },
        { "type": "collection", "settings": { "title": "Linkin Park" } },
        { "type": "collection", "settings": { "title": "Lady Gaga" } },
        { "type": "collection", "settings": { "title": "Nirvana" } },
        { "type": "collection", "settings": { "title": "Taylor Swift" } },
        { "type": "collection", "settings": { "title": "Lana del Rey" } }
      ]
    }
  ]
}
{% endschema %}
