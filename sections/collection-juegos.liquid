<section class="collection-juegos section">
  <div class="container">
    <!-- Header Personalizado para Juegos -->
    <div class="collection-juegos__header">
      <div class="collection-juegos__badge"> JUEGOS</div>
      <h1 class="collection-juegos__title">Colecci贸n de Videojuegos</h1>
      <p class="collection-juegos__subtitle">Domina el juego</p>
      <p class="collection-juegos__description">
        Merchandise oficial de tus videojuegos favoritos. Camisetas, accesorios, figuras y mucho m谩s.
      </p>
    </div>

    <!-- Categor铆as de Juegos -->
    <div class="collection-juegos__categories">
      <div class="categories-grid">
        <div class="category-card">
          <div class="category-card__icon">锔</div>
          <h3 class="category-card__title">RPG</h3>
          <p class="category-card__count">Aventuras 茅picas</p>
        </div>
        <div class="category-card">
          <div class="category-card__icon"></div>
          <h3 class="category-card__title">Acci贸n</h3>
          <p class="category-card__count">Adrenalina pura</p>
        </div>
        <div class="category-card">
          <div class="category-card__icon">З</div>
          <h3 class="category-card__title">Puzzle</h3>
          <p class="category-card__count">Desaf铆a tu mente</p>
        </div>
        <div class="category-card">
          <div class="category-card__icon"></div>
          <h3 class="category-card__title">Racing</h3>
          <p class="category-card__count">A toda velocidad</p>
        </div>
        <div class="category-card">
          <div class="category-card__icon"></div>
          <h3 class="category-card__title">Estrategia</h3>
          <p class="category-card__count">Planifica tu juego</p>
        </div>
        <div class="category-card">
          <div class="category-card__icon"></div>
          <h3 class="category-card__title">Open World</h3>
          <p class="category-card__count">Mundo abierto</p>
        </div>
      </div>
    </div>

    <!-- Toolbar -->
    <div class="collection__toolbar">
      <div class="collection__sort">
        <label for="sort-by-juegos">Ordenar por:</label>
        <select id="sort-by-juegos" class="collection__sort-select">
          <option value="manual">Destacados</option>
          <option value="best-selling">M谩s vendidos</option>
          <option value="price-ascending">Precio: Menor a Mayor</option>
          <option value="price-descending">Precio: Mayor a Menor</option>
          <option value="created-descending">M谩s recientes</option>
        </select>
      </div>
    </div>

    <!-- Grid de Productos -->
    <div class="collection__grid grid grid--4">
      {% for product in collection.products %}
        <article class="product-card product-card--juegos">
          <a href="{{ product.url }}" class="product-card__link">
            <div class="product-card__image-wrapper">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  srcset="{{ product.featured_image | image_url: width: 300 }} 300w,
                          {{ product.featured_image | image_url: width: 400 }} 400w,
                          {{ product.featured_image | image_url: width: 600 }} 600w"
                  sizes="(max-width: 480px) 100vw, (max-width: 768px) 50vw, 25vw"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="product-card__image"
                  loading="lazy"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'product-card__image placeholder' }}
              {% endif %}
            </div>
            <div class="product-card__content">
              <h3 class="product-card__title">{{ product.title }}</h3>
              <div class="product-card__price">
                {% if product.compare_at_price %}
                  <span class="price price--old">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="price price--new">{{ product.price | money }}</span>
              </div>
            </div>
          </a>
          <div class="product-card__actions">
            <button class="btn btn--primary btn--small" data-product-id="{{ product.id }}">
              Agregar al carrito
            </button>
          </div>
        </article>
      {% endfor %}
    </div>

    <!-- Gaming Community Section -->
    <div class="collection-juegos__community">
      <h2>nete a la comunidad gamer</h2>
      <p>Comparte tus experiencias y gana premios exclusivos</p>
      <div class="community-cta">
        <button class="btn btn--secondary">Discord</button>
        <button class="btn btn--secondary">Twitch</button>
        <button class="btn btn--secondary">YouTube</button>
      </div>
    </div>
  </div>
</section>

