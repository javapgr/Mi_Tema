<!-- Secci√≥n de Cinta Publicitaria Animada (Marquee Banner) -->
<section class="marquee-banner section">
  <div class="marquee-container">
    <div class="marquee-content" style="--marquee-duration: {{ section.settings.duration }}s">
      {% for i in (1..3) %}
        <div class="marquee-item">
          <span class="marquee-icon">{{ section.settings.icon }}</span>
          <span class="marquee-text">{{ section.settings.text }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .marquee-banner {
    background: linear-gradient(90deg, {{ section.settings.background_color }} 0%, {{ section.settings.background_color_end }} 100%);
    color: {{ section.settings.text_color }};
    padding: 1rem 0;
    overflow: hidden;
    border-top: 3px solid {{ section.settings.accent_color }};
    border-bottom: 3px solid {{ section.settings.accent_color }};
  }

  .marquee-container {
    display: flex;
    width: 100%;
    overflow: hidden;
  }

  .marquee-content {
    display: flex;
    gap: 3rem;
    animation: marquee-animation var(--marquee-duration, 20s) linear infinite;
    will-change: transform;
  }

  .marquee-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    white-space: nowrap;
    font-weight: bold;
    font-size: {{ section.settings.font_size }};
  }

  .marquee-icon {
    font-size: 1.5em;
    animation: bounce-icon 1s ease-in-out infinite;
  }

  .marquee-text {
    text-transform: uppercase;
    letter-spacing: 1px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  @keyframes marquee-animation {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }

  @keyframes bounce-icon {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  .marquee-banner:hover .marquee-content {
    animation-play-state: paused;
  }

  @media (max-width: 768px) {
    .marquee-banner {
      padding: 0.75rem 0;
    }

    .marquee-item {
      font-size: 0.9rem;
    }

    .marquee-content {
      gap: 2rem;
    }
  }
</style>

