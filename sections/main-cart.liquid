    margin-bottom: 2rem;
    color: var(--color-text-light);
  }

  .cart__empty h2 {
    font-size: 2.4rem;
    margin-bottom: 1rem;
  }

  .cart__empty p {
    color: var(--color-text-light);
    margin-bottom: 3rem;
  }

  @media (max-width: 1024px) {
    .cart__wrapper {
      grid-template-columns: 1fr;
    }

    .cart__summary {
      position: static;
    }
  }

  @media (max-width: 768px) {
    .cart-item {
      grid-template-columns: 80px 1fr;
      grid-template-rows: auto auto;
    }

    .cart-item__image-wrapper {
      width: 80px;
      height: 80px;
      grid-row: span 2;
    }

    .cart-item__quantity,
    .cart-item__total,
    .cart-item__remove {
      grid-column: 2;
    }

    .cart-item__total {
      text-align: left;
    }
  }
</style>

{% schema %}
{
  "name": "Carrito Principal",
  "tag": "section",
  "class": "cart-section",
  "settings": [
    {
      "type": "text",
      "id": "yape_phone",
      "label": "N√∫mero Yape",
      "default": "999 999 999"
    },
    {
      "type": "image_picker",
      "id": "yape_qr",
      "label": "QR de Yape"
    },
    {
      "type": "text",
      "id": "whatsapp_number",
      "label": "N√∫mero WhatsApp (con c√≥digo pa√≠s)",
      "default": "51999999999"
    }
  ]
}
{% endschema %}

<script>
(function() {
  const cartSection = document.querySelector('.cart-section');
  if (!cartSection) return;

  const paymentBtns = cartSection.querySelectorAll('[data-payment]');
  const yapePanel = cartSection.querySelector('[data-yape-panel]');
  const checkoutPanel = cartSection.querySelector('[data-checkout-panel]');
  const yapeFileInput = cartSection.querySelector('[data-yape-file]');
  const yapePreview = cartSection.querySelector('[data-yape-preview]');
  const yapeFilename = cartSection.querySelector('[data-yape-filename]');
  const yapeConfirmBtn = cartSection.querySelector('[data-yape-confirm]');
  const yapeAmountEl = cartSection.querySelector('[data-yape-amount]');
  const cartTotalEl = cartSection.querySelector('[data-cart-total]');
  const cartSubtotalEl = cartSection.querySelector('[data-cart-subtotal]');
  const deliveryCostEl = cartSection.querySelector('[data-delivery-cost]');
  const deliveryRow = cartSection.querySelector('.cart__summary-row--delivery');

  let uploadedFile = null;
  const whatsappNumber = '{{ section.settings.whatsapp_number | default: "51999999999" }}';
  const cartTotal = {{ cart.total_price }};

  // Calcular costo de delivery express desde propiedades del carrito
  let deliveryExtraCents = 0;
  {% for item in cart.items %}
    {% if item.properties['Env√≠o'] contains 'Express' %}
      deliveryExtraCents += 1000 * {{ item.quantity }};
    {% endif %}
  {% endfor %}

  const updateTotals = () => {
    const finalTotal = cartTotal + deliveryExtraCents;
    if (cartTotalEl) cartTotalEl.textContent = formatMoney(finalTotal);
    if (yapeAmountEl) yapeAmountEl.textContent = formatMoney(finalTotal);
    if (deliveryCostEl) deliveryCostEl.textContent = formatMoney(deliveryExtraCents);
    if (deliveryRow) {
      deliveryRow.style.display = deliveryExtraCents > 0 ? 'flex' : 'none';
    }
  };

  const formatMoney = cents => {
    return 'S/. ' + (cents / 100).toFixed(2);
  };

  updateTotals();

  // Alternar m√©todo de pago
  paymentBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      paymentBtns.forEach(b => b.classList.remove('is-selected'));
      btn.classList.add('is-selected');

      const method = btn.dataset.payment;
      if (method === 'yape') {
        yapePanel.style.display = 'block';
        checkoutPanel.style.display = 'none';
      } else {
        yapePanel.style.display = 'none';
        checkoutPanel.style.display = 'block';
      }
    });
  });

  // Subir comprobante
  if (yapeFileInput) {
    yapeFileInput.addEventListener('change', e => {
      const file = e.target.files[0];
      if (!file) return;

      uploadedFile = file;
      yapeFilename.textContent = file.name;

      const reader = new FileReader();
      reader.onload = event => {
        yapePreview.src = event.target.result;
        yapePreview.style.display = 'block';
        yapeConfirmBtn.disabled = false;
      };
      reader.readAsDataURL(file);
    });
  }

  // Confirmar pedido con Yape
  if (yapeConfirmBtn) {
    yapeConfirmBtn.addEventListener('click', () => {
      if (!uploadedFile) {
        alert('Por favor sube tu comprobante de pago');
        return;
      }

      // Construir resumen del pedido
      let orderSummary = 'üõí *NUEVO PEDIDO - YAPE*%0A%0A';
      {% for item in cart.items %}
        orderSummary += '‚Ä¢ {{ item.product.title | escape }} ({{ item.variant.title | escape }}) x{{ item.quantity }}%0A';
        {% if item.properties['Env√≠o'] %}
          orderSummary += '  Env√≠o: {{ item.properties["Env√≠o"] }}%0A';
        {% endif %}
      {% endfor %}
      orderSummary += '%0Aüí∞ *Total: ' + (yapeAmountEl ? yapeAmountEl.textContent : '{{ cart.total_price | money }}') + '*%0A';
      orderSummary += '%0Aüìé El comprobante ser√° enviado en la siguiente imagen.';

      // Abrir WhatsApp
      const whatsappUrl = 'https://wa.me/' + whatsappNumber + '?text=' + orderSummary;
      window.open(whatsappUrl, '_blank');

      // Mostrar instrucciones
      alert('Se abrir√° WhatsApp. Por favor env√≠a el mensaje y luego adjunta tu comprobante de pago.');
    });
  }

  // Actualizar cantidad en carrito
  const quantityBtns = cartSection.querySelectorAll('.cart-item__quantity-btn');
  quantityBtns.forEach(btn => {
    btn.addEventListener('click', async () => {
      const key = btn.dataset.key;
      const input = cartSection.querySelector(`.cart-item__quantity-input[data-key="${key}"]`);
      if (!input) return;

      let qty = parseInt(input.value, 10);
      if (btn.dataset.action === 'increase') {
        qty++;
      } else if (btn.dataset.action === 'decrease') {
        qty = Math.max(0, qty - 1);
      }

      input.value = qty;

      // Actualizar carrito via AJAX
      try {
        const response = await fetch('/cart/change.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: key, quantity: qty })
        });
        if (response.ok) {
          location.reload();
        }
      } catch (error) {
        console.error('Error updating cart:', error);
      }
    });
  });
})();
</script>
