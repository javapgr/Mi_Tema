<!-- Secci√≥n del Carrito -->
<section class="cart section">
  <div class="container">
    <h1 class="cart__title">Tu Carrito</h1>

    {% if cart.item_count > 0 %}
      <form action="{{ routes.cart_url }}" method="post" class="cart__form">
        <div class="cart__wrapper">
          <!-- Lista de productos -->
          <div class="cart__items">
            {% for item in cart.items %}
              <div class="cart-item">
                <a href="{{ item.url }}" class="cart-item__image-wrapper">
                  {% if item.image %}
                    <img 
                      src="{{ item.image | image_url: width: 200 }}"
                      alt="{{ item.title | escape }}"
                      class="cart-item__image"
                      loading="lazy"
                    >
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'cart-item__image placeholder' }}
                  {% endif %}
                </a>

                <div class="cart-item__details">
                  <a href="{{ item.url }}" class="cart-item__title">{{ item.product.title }}</a>
                  {% unless item.variant.title == 'Default Title' %}
                    <p class="cart-item__variant">{{ item.variant.title }}</p>
                  {% endunless %}
                  <p class="cart-item__price">{{ item.original_price | money }}</p>
                </div>

                <div class="cart-item__quantity">
                  <div class="cart-item__quantity-selector">
                    <button type="button" class="cart-item__quantity-btn" data-action="decrease" data-key="{{ item.key }}">‚àí</button>
                    <input 
                      type="number" 
                      name="updates[]" 
                      value="{{ item.quantity }}" 
                      min="0"
                      class="cart-item__quantity-input"
                      data-key="{{ item.key }}"
                    >
                    <button type="button" class="cart-item__quantity-btn" data-action="increase" data-key="{{ item.key }}">+</button>
                  </div>
                </div>

                <div class="cart-item__total">
                  {{ item.final_line_price | money }}
                </div>

                <a href="{{ routes.cart_change_url }}?id={{ item.key }}&quantity=0" class="cart-item__remove" aria-label="Eliminar">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                  </svg>
                </a>
              </div>
            {% endfor %}
          </div>

          <!-- Resumen del carrito -->
          <div class="cart__summary">
            <div class="cart__summary-row">
              <span>Subtotal</span>
              <span data-cart-subtotal>{{ cart.total_price | money }}</span>
            </div>

            <!-- Costo de Delivery Express -->
            <div class="cart__summary-row cart__summary-row--delivery" style="display: none;">
              <span>Delivery Express</span>
              <span data-delivery-cost>S/. 0.00</span>
            </div>

            <div class="cart__summary-row cart__summary-row--total">
              <span>Total</span>
              <span data-cart-total>{{ cart.total_price | money }}</span>
            </div>
            
            <p class="cart__summary-note">Impuestos incluidos</p>

            <!-- M√©todo de Pago -->
            <div class="cart__payment-method">
              <label class="cart__payment-label">M√©todo de Pago</label>
              <div class="cart__payment-options">
                <button type="button" class="cart__payment-btn is-selected" data-payment="checkout">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                    <line x1="1" y1="10" x2="23" y2="10"></line>
                  </svg>
                  Tarjeta / Checkout
                </button>
                <button type="button" class="cart__payment-btn" data-payment="yape">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
                    <line x1="12" y1="18" x2="12.01" y2="18"></line>
                  </svg>
                  Yape
                </button>
              </div>
            </div>

            <!-- Panel de Yape (oculto por defecto) -->
            <div class="cart__yape-panel" data-yape-panel style="display: none;">
              <div class="cart__yape-info">
                <p class="cart__yape-title">üì± Paga con Yape</p>
                <div class="cart__yape-qr">
                  <img src="{{ 'yape-qr.png' | asset_url }}" alt="QR Yape" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                  <div class="cart__yape-number" style="display: none;">
                    <p><strong>N√∫mero Yape:</strong></p>
                    <p class="cart__yape-phone">999 999 999</p>
                  </div>
                </div>
                <p class="cart__yape-instruction">Escanea el QR o yapea al n√∫mero indicado</p>
                <p class="cart__yape-amount">Monto a pagar: <strong data-yape-amount>{{ cart.total_price | money }}</strong></p>
              </div>

              <div class="cart__yape-upload">
                <label class="cart__yape-upload-label">
                  <input type="file" accept="image/*" data-yape-file class="cart__yape-file-input">
                  <span class="cart__yape-upload-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                      <polyline points="17 8 12 3 7 8"></polyline>
                      <line x1="12" y1="3" x2="12" y2="15"></line>
                    </svg>
                    Subir comprobante de pago
                  </span>
                </label>
                <p class="cart__yape-preview-name" data-yape-filename></p>
                <img class="cart__yape-preview" data-yape-preview style="display: none;">
              </div>

              <button type="button" class="btn btn--primary cart__yape-confirm" data-yape-confirm disabled>
                Confirmar Pedido con Yape
              </button>
              <p class="cart__yape-note">Te contactaremos por WhatsApp para confirmar tu pedido</p>
            </div>

            <!-- Bot√≥n de Checkout normal -->
            <div class="cart__checkout-panel" data-checkout-panel>
              <button type="submit" name="checkout" class="btn btn--primary cart__checkout">
                Finalizar Compra
              </button>
            </div>

            <a href="{{ routes.all_products_collection_url }}" class="cart__continue">
              Continuar comprando
            </a>
          </div>
        </div>
      </form>
    {% else %}
      <div class="cart__empty">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
        <h2>Tu carrito est√° vac√≠o</h2>
        <p>Parece que a√∫n no has agregado nada al carrito.</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
          Explorar productos
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
