    text-align: center;
    border: none;
    font-size: 1.4rem;
    -moz-appearance: textfield;
  }

  .cart-item__quantity-input::-webkit-outer-spin-button,
  .cart-item__quantity-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
  }

  .cart-item__total {
    font-weight: 700;
    font-size: 1.6rem;
    min-width: 100px;
    text-align: right;
  }

