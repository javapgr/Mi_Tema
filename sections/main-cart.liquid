    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    width: 100%;
    padding: 1.2rem;
    border: 2px dashed #6B21A8;
    border-radius: 8px;
    background: #faf5ff;
    color: #6B21A8;
    cursor: pointer;
    font-size: 1.4rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .cart__yape-upload-btn:hover {
    background: #f3e8ff;
  }

  .cart__yape-preview-name {
    font-size: 1.2rem;
    color: var(--color-text-light);
    margin-top: 0.5rem;
    text-align: center;
  }

  .cart__yape-preview {
    max-width: 100%;
    max-height: 200px;
    margin-top: 1rem;
    border-radius: 8px;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  .cart__yape-confirm {
    width: 100%;
    padding: 1.6rem;
    font-size: 1.6rem;
    background: #6B21A8;
