  }

  .cart__yape-qr {
    margin-bottom: 1.5rem;
  }

  .cart__yape-qr img {
    max-width: 180px;
    border-radius: 8px;
  }

  .cart__yape-phone {
    font-size: 2.4rem;
    font-weight: 700;
    color: #6B21A8;
    letter-spacing: 0.1em;
  }

  .cart__yape-instruction {
