    width: 100%;
    padding: 1.6rem;
    font-size: 1.6rem;
    margin-bottom: 1.5rem;
  }

  .cart__continue {
    display: block;
    text-align: center;
    font-size: 1.4rem;
    color: var(--color-text-light);
    text-decoration: underline;
  }

  /* Payment Method */
  .cart__payment-method {
    margin-bottom: 2rem;
  }

  .cart__payment-label {
    display: block;
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 1.4rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cart__payment-options {
    display: flex;
    gap: 1rem;
  }

  .cart__payment-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    padding: 1.2rem;
    border: 2px solid #e5e5e5;
    border-radius: 8px;
    background: #fff;
    cursor: pointer;
    font-size: 1.3rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .cart__payment-btn:hover,
  .cart__payment-btn.is-selected {
    border-color: var(--color-primary);
    background-color: var(--color-primary);
    color: white;
  }

