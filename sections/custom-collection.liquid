<!-- Sección Personalizada para Colecciones Específicas -->
<section class="custom-collection section">
  <div class="container">
    <!-- Header de Colección -->
    <div class="collection__header">
      <h1 class="collection__title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="collection__description">{{ collection.description }}</div>
      {% endif %}
      <p class="collection__count">{{ collection.products_count }} productos</p>
    </div>

    <!-- Filtros y Ordenar -->
    <div class="collection__toolbar">
      <div class="collection__filters">
        <!-- Aquí puedes agregar filtros según necesites -->
      </div>
      
      <div class="collection__sort">
        <label for="sort-by">Ordenar por:</label>
        <select id="sort-by" class="collection__sort-select">
          <option value="manual">Destacados</option>
          <option value="best-selling">Más vendidos</option>
          <option value="title-ascending">A-Z</option>
          <option value="title-descending">Z-A</option>
          <option value="price-ascending">Precio: Menor a Mayor</option>
          <option value="price-descending">Precio: Mayor a Menor</option>
          <option value="created-descending">Más recientes</option>
        </select>
      </div>
    </div>

    <!-- Grid de Productos -->
    <div class="collection__grid grid grid--4">
      {% for product in collection.products %}
        <article class="product-card">
          <a href="{{ product.url }}" class="product-card__link">
            <div class="product-card__image-wrapper">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  srcset="{{ product.featured_image | image_url: width: 300 }} 300w,
                          {{ product.featured_image | image_url: width: 400 }} 400w,
                          {{ product.featured_image | image_url: width: 600 }} 600w"
                  sizes="(max-width: 480px) 100vw, (max-width: 768px) 50vw, 25vw"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="product-card__image"
                  loading="lazy"
                >
                {% if product.images[1] %}
                  <img 
                    src="{{ product.images[1] | image_url: width: 400 }}"
                    alt="{{ product.images[1].alt | escape }}"
                    class="product-card__image product-card__image--secondary"
                    loading="lazy"
                  >
                {% endif %}
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'product-card__image placeholder' }}
              {% endif %}
            </div>
            <div class="product-card__content">
              <h3 class="product-card__title">{{ product.title }}</h3>
              
              <div class="product-card__price">
                {% if product.compare_at_price > product.price %}
                  <span class="product-card__price--compare">{{ product.compare_at_price | money }}</span>
                  <span class="product-card__price--sale">{{ product.price | money }}</span>
                {% else %}
                  <span class="product-card__price--regular">{{ product.price | money }}</span>
                {% endif %}
              </div>
              
              {% if product.available == false %}
                <span class="product-card__badge product-card__badge--sold-out">Agotado</span>
              {% elsif product.compare_at_price > product.price %}
                <span class="product-card__badge product-card__badge--sale">Oferta</span>
              {% endif %}
            </div>
          </a>
        </article>
      {% else %}
        <p>{{ 'collections.general.no_matches' | t }}</p>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .custom-collection {
    padding: 4rem 0;
  }

  .collection__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .collection__title {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .collection__description {
    max-width: 800px;
    margin: 0 auto 1rem;
    color: var(--color-text-light);
  }

  .collection__count {
    font-size: 1.2rem;
    color: var(--color-text-light);
  }

  .collection__toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }

  .collection__sort {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .collection__sort-select {
    padding: 0.5rem 1rem;
    border: 1px solid #ddd;
    border-radius: var(--border-radius);
    background-color: white;
  }

  .collection__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 3rem;
  }

  .product-card {
    position: relative;
    transition: transform 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-8px);
  }

  .product-card__link {
    text-decoration: none;
    color: inherit;
  }

  .product-card__image-wrapper {
    position: relative;
    aspect-ratio: 4/5;
    overflow: hidden;
    border-radius: var(--border-radius);
    margin-bottom: 1.5rem;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .product-card__image--secondary {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .product-card:hover .product-card__image {
    opacity: 0;
  }

  .product-card:hover .product-card__image--secondary {
    opacity: 1;
  }

  .product-card__content {
    text-align: center;
  }

  .product-card__title {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .product-card__price {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    align-items: center;
    font-weight: 600;
  }

  .product-card__price--compare {
    text-decoration: line-through;
    color: var(--color-text-light);
    font-size: 0.9rem;
  }

  .product-card__price--sale {
    color: #ef4444;
  }

  .product-card__badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.3rem 0.8rem;
    border-radius: 1rem;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .product-card__badge--sale {
    background-color: #ef4444;
    color: white;
  }

  .product-card__badge--sold-out {
    background-color: #6b7280;
    color: white;
  }

  @media (max-width: 768px) {
    .collection__toolbar {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
    
    .collection__grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Colección Personalizada",
  "tag": "section",
  "class": "custom-collection-section",
  "settings": []
}
{% endschema %}