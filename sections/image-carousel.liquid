      ]
    }
  ],
  "presets": [
    {
      "name": "Carrusel de Im치genes",
      "blocks": [
        { "type": "image", "settings": {} },
        { "type": "image", "settings": {} },
        { "type": "image", "settings": {} }
      ]
    }
  ]
}
{% endschema %}
